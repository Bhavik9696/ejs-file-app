<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Task Manager</title>
    <link href="/stylesheets/style.css" rel="stylesheet" />
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900 text-white p-10">
      <div class="form mb-10">
        <form action="/create" method="POST">
          <input
            class="block px-5 py-2 bg-zinc-800 mt-2 w-full rounded-lg"
            type="text"
            name="title"
            placeholder="Title goes here"
            required
          />
          <textarea
            class="block px-5 py-2 bg-zinc-800 resize-none mt-2 w-full rounded-lg"
            name="details"
            placeholder="Write your task here"
            required
          ></textarea>
          <input
            class="block mt-2 bg-blue-600 p-2 rounded-md"
            type="submit"
            value="Create Task"
          />
        </form>
      </div>

      <div class="tasks flex gap-3 flex-wrap">
        <% if (files.length > 0) { %>
        <% files.forEach(function(file) { %>
        <div class="task w-80 px-6 py-4 bg-zinc-800 rounded-md">
          <h1 class="text-white text-xl tracking-tight"><%= file.replace(".txt", "") %></h1>
          <a class="text-blue-500" href="/file/<%= file %>">Read More</a>
        </div>
        <% }); %>
        <% } else { %>
        <h1 class="text-zinc-600 px-9">No task yet</h1>
        <% } %>
      </div>
    </div>
  </body>
</html>
